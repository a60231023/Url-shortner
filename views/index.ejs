<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shrinker</h1>
      <form action="/shortUrls" method="post" class="my-4 form-inline">
        <input required
          placeholder="Enter the URL"
          type="url"
          name="fullUrl"
          id="fullUrl" class="form-control col mr-2"
        />
        <button class="btn btn-success my-2" type="submit">Shrink</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrls => { %>
                <tr>
                  <td>
                    <a href="<%= shortUrls.full %>"
                      ><%= shortUrls.full %></a
                    >
                  </td>
                  <td><a href="<%= shortUrls.short %>" target="_blank"><%= shortUrls.short %></a></td>
                  <td><%= shortUrls.clicks %></td>
                </tr>
            <% }) %> 
        </tbody>
      </table>
    </div>
  </body>
</html>
